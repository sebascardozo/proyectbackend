html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx", crossorigin="anonymous")
    title=title
  body
    div(class="container-sm d-flex flex-column align-items-center")
      img(style="width: 100px; height: 100px; object-fit: contain;", src="http://localhost:8080/images/pug.png")
      a(class="link my-4 p-1 border border-primary rounded", href="http://localhost:8080/products")="IR A LISTA DE PRODUCTOS"
      div(class="d-flex flex-column align-items-center")
        h1="CARGAR NUEVO PRODUCTO"
        form(id="productForm")
          div(class="mb-3")
            label(for="title" class="form-label")="Nombre"
            input(type="text", class="form-control", id="title", name="title")
          div(class="mb-3")
            label(for="price", class="form-label")="Precio"
            input(type="number" class="form-control" id="price" name="price")
          div(class="mb-3")
            input(type="file", class="form-control", id="file" name="file")
          button(type="submit", class="btn btn-success")="Add Product"
      div(class="response" id="response")
    script(src="js/productForm.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js", integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa", crossorigin="anonymous")
